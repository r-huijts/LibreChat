# OCR Service Configuration Example
# Copy this file to .env and customize for your environment

# API Configuration
OCR_API_KEY=dev-ocr-key
OCR_HOST=0.0.0.0
OCR_PORT=8000

# OCR Engine Selection (tesseract, paddleocr, easyocr, surya)
OCR_ENGINE=tesseract

# GPU Configuration
OCR_USE_GPU=false
OCR_GPU_DEVICE_ID=0

# Storage Configuration (memory, local, s3)
OCR_STORAGE_BACKEND=memory
OCR_STORAGE_PATH=/data/ocr

# File Processing
OCR_MAX_FILE_SIZE_MB=10
OCR_FILE_RETENTION_HOURS=24

# Tesseract Configuration
OCR_TESSERACT_LANG=eng
OCR_TESSERACT_PSM=3
OCR_TESSERACT_OEM=3

# Logging (DEBUG, INFO, WARNING, ERROR)
OCR_LOG_LEVEL=INFO
